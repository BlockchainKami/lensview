{
  "manifest_version": 3,
  "name": "Review Website Opener",
  "version": "1.0",
  "icons": {
    "16": "images/Lensview-16.png",
    "32": "images/Lensview-32.png",
    "48": "images/Lensview-48.png",
    "128": "images/Lensview-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/Lensview-16.png",
      "32": "images/Lensview-32.png",
      "48": "images/Lensview-48.png",
      "128": "images/Lensview-128.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
